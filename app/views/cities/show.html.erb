<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @city.name %></h1>
      <p> <%= @city.itinerary.html_safe %> </p>
    </div>
    <div class="col-md-3">
      <h2>Trip Chats:</h2>
      <div class="mb-4">
        <% if @chats.any? %>
          <ul>
            <% @chats.each do |chat| %>
              <li><%= link_to chat.title, chat_path(chat) %></li>
            <% end %>
          </ul>
        <% else %>
          There are no chats yet.
        <% end %>
      </div>
      <%= button_to " chat", city_chats_path(@city), class: "btn btn-primary" %>
    </div>
  </div>
</div>
