<div class="login-container" style="display: flex; justify-content: center; align-items: center; height: 60vh;">
  <div class="login-form-box" style="width: 100%; max-width: 400px;">
    <h2 class="text-center">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs" style="text-align: left;">
        <%= f.input :email,
                    required: true,
                    label: "Email:",
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions text-center" style="margin-top: 15px;">
        <%= f.button :submit, "Reset password", class:"btn btn-link" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
