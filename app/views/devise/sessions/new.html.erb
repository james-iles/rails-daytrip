<div class="login-container" style="display: flex; justify-content: center; align-items: center; height: 60vh;">
  <div class="login-form-box" style="width: 100%; max-width: 400px;">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="text-align: left;">
        <%= f.input :email, autofocus: true, label: "Email:", input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: "Password:", input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="mt-1">
    <%= render "devise/shared/links"%>
    </div>
  </div>
</div>
